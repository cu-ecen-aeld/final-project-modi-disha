#socketserver_SOURCES = socketserver.c


# the compiler: gcc for C program, define as g++ for C++
ifeq ($(CC),)
	CC = $(CROSS_COMPILE)gcc
endif

# compiler flags:
#  -g    adds debugging information to the executable file
#  -Wall turns on most, but not all, compiler warnings
ifeq ($(CFLAGS),)
	CFLAGS  = -g  
endif

#ifeq ($(LDFLAGS),)
#	LDFLAGS = -pthread -lrt   -lcrypt -lm 
#endif

#socketserver: socketserver.c
#	$(CC) $(CFLAGS) -o socketserver socketserver.c $(LDFLAGS)

#socketserver: SocketClient.c
#	$(CC) $(CFLAGS) -o SocketClient SocketClient.c $(LDFLAGS)
all: gpio lcd

gpio: gpio.c
	$(CC) $(CFLAGS) -o gpio gpio.c


lcd: lcd.c lcd.h
	$(CC) $(CFLAGS) -o lcd lcd.c

.PHONY: all

clean:
	\rm gpio lcd
#	\rm SocketClient
	$(RM) $(TARGET) 
